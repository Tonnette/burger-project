<div class="container myContainer">
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6">
      <h5 class="eat">Uneaten Burgers</h2>

        <div class="card w-90">
          {{!-- <div class="card-body">  --}}
          {{!-- <h5 class="card-title">Uneaten Burgers</h5> --}}

          <ol class="list-group list-group-flush">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burgers-block devoured=0}}
            {{/unless}}
            {{/each}}
          </ol>

        </div>
    </div>





    <div class="col-sm-6 col-md-6 col-lg-6">

      <h5 class="eat">Devoured Burgers</h2>
        <div style="width: 9rem;"></div>

        <ol class="list-group list-group-flush">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burgers-block devoured=1}}
          {{/if}}
          {{/each}}
        </ol>



    </div>

  </div>
</div>
</div>


